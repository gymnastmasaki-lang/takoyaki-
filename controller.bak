  </style>
</head>
<body>
  <div class="header">
    <h1>ğŸ›ï¸ æ³¨æ–‡ç®¡ç†ã‚³ãƒ³ãƒˆãƒ­ãƒ¼ãƒ©ãƒ¼</h1>
  </div>
  
  <div class="top-controls">
    <button class="big-btn btn-refresh" onclick="loadOrders()">ğŸ”„ æœ€æ–°æƒ…å ±ã«æ›´æ–°</button>
    <button class="big-btn btn-add-waiting" onclick="increaseWaiting()">ğŸ‘¥ å¾…ã¡äººæ•°+1</button>
  </div>
  
  <div class="manual-waiting-card">
    <div class="manual-waiting-label">æ‰‹å‹•è¿½åŠ ã®å¾…ã¡äººæ•°</div>
    <div class="manual-count" id="manual-count">0</div>
    <button class="btn-reset" onclick="resetWaiting()">ãƒªã‚»ãƒƒãƒˆ</button>
  </div>
  
  <div id="orders-container">
    <div class="loading">èª­ã¿è¾¼ã¿ä¸­...</div>
  </div>

  <!-- Firebase SDK -->
  <script type="module">
    import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js';
    import { getFirestore, collection, getDocs, doc, updateDoc, deleteDoc, setDoc, Timestamp } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js';

    // Firebaseè¨­å®š
    const firebaseConfig = {
      apiKey: "AIzaSyBoSdfEkez-b3P0BUHtowxCrTw-yEBdHSg",
      authDomain: "takoyaki-order-system-bacd7.firebaseapp.com",
      projectId: "takoyaki-order-system-bacd7",
      storageBucket: "takoyaki-order-system-bacd7.firebasestorage.app",
      messagingSenderId: "104494752890",
      appId: "1:104494752890:web:c0a25d62f42ffca01687c3"
    };

    const app = initializeApp(firebaseConfig);
    const db = getFirestore(app);

    window.onload = async function() {
      await loadOrders();
      await updateManualCount();
      // 30ç§’ã”ã¨ã«è‡ªå‹•æ›´æ–°
      setInterval(loadOrders, 30000);
    };

    async function loadOrders() {
      try {
        const ordersSnapshot = await getDocs(collection(db, 'orders'));
        const orders = [];
        
        ordersSnapshot.forEach(doc => {
          const data = doc.data();
          orders.push({
            id: doc.id,
            orderNumber: data.orderNumber,
            timestamp: data.timestamp.toDate().toLocaleString('ja-JP'),
            tableNumber: data.tableNumber,
            items: data.items,
            totalAmount: data.totalAmount,
            deleteAt: data.deleteAt.toDate().toLocaleString('ja-JP')
          });
        });
        
        // æ³¨æ–‡ç•ªå·ã§ã‚½ãƒ¼ãƒˆ
        orders.sort((a, b) => a.orderNumber - b.orderNumber);
        
        displayOrders(orders);
      } catch (e) {
        console.error('æ³¨æ–‡èª­ã¿è¾¼ã¿ã‚¨ãƒ©ãƒ¼:', e);
        document.getElementById('orders-container').innerHTML = 
          '<div class="no-orders">ã‚¨ãƒ©ãƒ¼: ' + e.message + '</div>';
      }
    }

    function displayOrders(orders) {
      const container = document.getElementById('orders-container');
      
      if (orders.length === 0) {
        container.innerHTML = '<div class="no-orders">ç¾åœ¨æ³¨æ–‡ã¯ã‚ã‚Šã¾ã›ã‚“</div>';
        return;
      }
      
      container.innerHTML = '';
      
      orders.forEach(order => {
        const card = document.createElement('div');
        card.className = 'order-card';
        
        let itemsHtml = '';
        order.items.forEach(item => {
          itemsHtml += `
            <div class="item">
              <div class="item-name">${item.name}</div>
              <div class="item-details">
                ãƒˆãƒƒãƒ”ãƒ³ã‚°: ${item.toppings} | æ•°é‡: ${item.quantity}å€‹
              </div>
            </div>
          `;
        });
        
        card.innerHTML = `
          <div class="order-header">
            <div>
              <div class="order-number">#${order.orderNumber}</div>
              <div class="order-table">${order.tableNumber}</div>
              <div class="order-info">${order.timestamp}</div>
            </div>
          </div>
          <div class="order-items">${itemsHtml}</div>
          <div class="order-total">åˆè¨ˆ: Â¥${order.totalAmount.toLocaleString()}</div>
          <div class="delete-time">â° å‰Šé™¤äºˆå®š: ${order.deleteAt}</div>
          <div class="controls">
            <button class="control-btn btn-extend" onclick="extendTime('${order.id}')">
              +10åˆ†å»¶é•·
            </button>
            <button class="control-btn btn-complete" onclick="completeOrder('${order.id}')">
              âœ“ å®Œäº†
            </button>
            <button class="control-btn btn-cancel" onclick="cancelOrder('${order.id}')">
              âœ• ã‚­ãƒ£ãƒ³ã‚»ãƒ«
            </button>
          </div>
        `;
        
        container.appendChild(card);
      });
    }

    window.extendTime = async function(orderId) {
      try {
        const orderRef = doc(db, 'orders', orderId);
        const orderDoc = await getDocs(collection(db, 'orders'));
        
        let currentDeleteAt;
        orderDoc.forEach(d => {
          if (d.id === orderId) {
            currentDeleteAt = d.data().deleteAt.toDate();
          }
        });
        
        const newDeleteAt = new Date(currentDeleteAt.getTime() + 10 * 60 * 1000);
        
        await updateDoc(orderRef, {
          deleteAt: Timestamp.fromDate(newDeleteAt)
        });
        
        showToast('âœ“ 10åˆ†å»¶é•·ã—ã¾ã—ãŸ');
        await loadOrders();
      } catch (e) {
        console.error('å»¶é•·ã‚¨ãƒ©ãƒ¼:', e);
        showToast('ã‚¨ãƒ©ãƒ¼: ' + e.message);
      }
    };

    window.completeOrder = async function(orderId) {
      try {
        await deleteDoc(doc(db, 'orders', orderId));
        showToast('âœ“ æ³¨æ–‡ã‚’å®Œäº†ã—ã¾ã—ãŸ');
        await loadOrders();
      } catch (e) {
        console.error('å®Œäº†ã‚¨ãƒ©ãƒ¼:', e);
        showToast('ã‚¨ãƒ©ãƒ¼: ' + e.message);
      }
    };

    window.cancelOrder = async function(orderId) {
      try {
        const orderRef = doc(db, 'orders', orderId);
        await updateDoc(orderRef, {
          cancelledAt: Timestamp.now()
        });
        
        // 1åˆ†å¾Œã«è‡ªå‹•å‰Šé™¤
        setTimeout(async () => {
          try {
            await deleteDoc(orderRef);
          } catch (e) {
            console.error('ã‚­ãƒ£ãƒ³ã‚»ãƒ«è¨˜éŒ²å‰Šé™¤ã‚¨ãƒ©ãƒ¼:', e);
          }
        }, 60000);
        
        showToast('âœ“ æ³¨æ–‡ã‚’ã‚­ãƒ£ãƒ³ã‚»ãƒ«ã—ã¾ã—ãŸ');
        await loadOrders();
      } catch (e) {
        console.error('ã‚­ãƒ£ãƒ³ã‚»ãƒ«ã‚¨ãƒ©ãƒ¼:', e);
        showToast('ã‚¨ãƒ©ãƒ¼: ' + e.message);
      }
    };

    window.increaseWaiting = async function() {
      try {
        const settingsRef = doc(db, 'settings', 'waiting');
        const settingsDoc = await getDocs(collection(db, 'settings'));
        
        let currentCount = 0;
        settingsDoc.forEach(d => {
          if (d.id === 'waiting') {
            currentCount = d.data().manualCount || 0;
          }
        });
        
        await setDoc(settingsRef, {
          manualCount: currentCount + 1
        });
        
        await updateManualCount();
        showToast('âœ“ å¾…ã¡äººæ•°ã‚’1çµ„å¢—ã‚„ã—ã¾ã—ãŸ');
      } catch (e) {
        console.error('å¾…ã¡äººæ•°è¿½åŠ ã‚¨ãƒ©ãƒ¼:', e);
        showToast('ã‚¨ãƒ©ãƒ¼: ' + e.message);
      }
    };

    window.resetWaiting = async function() {
      try {
        const settingsRef = doc(db, 'settings', 'waiting');
        await setDoc(settingsRef, {
          manualCount: 0
        });
        
        await updateManualCount();
        showToast('âœ“ æ‰‹å‹•å¾…ã¡äººæ•°ã‚’ãƒªã‚»ãƒƒãƒˆã—ã¾ã—ãŸ');
      } catch (e) {
        console.error('ãƒªã‚»ãƒƒãƒˆã‚¨ãƒ©ãƒ¼:', e);
        showToast('ã‚¨ãƒ©ãƒ¼: ' + e.message);
      }
    };

    async function updateManualCount() {
      try {
        const ordersSnapshot = await getDocs(collection(db, 'orders'));
        const now = new Date();
        const validOrders = new Set();
        
        ordersSnapshot.forEach(doc => {
          const data = doc.data();
          if (data.deleteAt && data.deleteAt.toDate() > now) {
            validOrders.add(data.orderNumber);
          }
        });
        
        const settingsDoc = await getDocs(collection(db, 'settings'));
        let manualCount = 0;
        settingsDoc.forEach(doc => {
          if (doc.id === 'waiting') {
            manualCount = doc.data().manualCount || 0;
          }
        });
        
        const totalWaiting = 1 + validOrders.size + manualCount;
        document.getElementById('manual-count').textContent = totalWaiting;
      } catch (e) {
        console.error('æ‰‹å‹•ã‚«ã‚¦ãƒ³ãƒˆå–å¾—ã‚¨ãƒ©ãƒ¼:', e);
      }
    }

    function showToast(message) {
      const toast = document.createElement('div');
      toast.style.cssText = `
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: rgba(0, 0, 0, 0.9);
        color: white;
        padding: 30px 50px;
        border-radius: 15px;
        font-size: 24px;
        font-weight: bold;
        z-index: 10000;
        box-shadow: 0 8px 30px rgba(0,0,0,0.5);
        animation: fadeInOut 2s ease-in-out;
      `;
      toast.textContent = message;
      document.body.appendChild(toast);
      
      setTimeout(() => {
        toast.remove();
      }, 2000);
    }
    
    const style = document.createElement('style');
    style.textContent = `
      @keyframes fadeInOut {
        0% { opacity: 0; transform: translate(-50%, -50%) scale(0.8); }
        20% { opacity: 1; transform: translate(-50%, -50%) scale(1); }
        80% { opacity: 1; transform: translate(-50%, -50%) scale(1); }
        100% { opacity: 0; transform: translate(-50%, -50%) scale(0.8); }
      }
    `;
    document.head.appendChild(style);

    window.loadOrders = loadOrders;
  </script>
</body>
